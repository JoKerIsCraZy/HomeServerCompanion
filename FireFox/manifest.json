{
  "manifest_version": 3,
  "name": "Home Server Companion",
  "version": "2.0",
  "description": "Manage SABnzbd, Sonarr, Radarr, Tautulli, and Unraid",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src * http: https:; img-src * http: https: data:;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "homeserver-companion@unraid.cv",
      "strict_min_version": "109.0"
    }
  }
}
